<table class="table">
    <thead>
        <tr>
            <th>Symbol</th>
            <th>Name</th>
            <th>Date</th>
            <th>Type</th>
            <th>PE Ratio</th>
            <th>Risk Beta</th>
        </tr>
    </thead>

    <tbody id="show">
        @foreach (var item in Model.Companies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.symbol)
                </td>
                <td style="width:380px">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.peRatio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BetaRisk)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="AddRepository" asp-route-symbol=@item.symbol>Add To My Repository</a>
                </td>
                @*<td>
                    <a asp-controller="Home" asp-action="CompareCharts" asp-route-symbol=@item.symbol>Time series Chart</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>



@if (Model.Current != null)
{
    var equity = Model.Current;
    <hr />
    <table>
        <tbody>
            <tr>
                <td>
                    <div>
                        <canvas id="myChart" height="300" width="600"></canvas>
                    </div>
                </td>
                <td>
                    Current Chart Data
                    <table>
                        <tr>
                            <td>Symbol</td>
                            <td>@equity.symbol</td>
                        </tr>
                        <tr>
                            <td>Open</td>
                            <td>@equity.open</td>
                        </tr>
                        <tr>
                            <td>High</td>
                            <td>@equity.high</td>
                        </tr>
                        <tr>
                            <td>Close</td>
                            <td>@equity.close</td>
                        </tr>
                        <tr>
                            <td>Volume</td>
                            <td>@equity.volume</td>
                        </tr>
                    </table>
                </td>
                <td>
                    <a asp-controller="Home" asp-action="SaveCharts" asp-route-symbol="@Model.Current.symbol"><img src="~/images/button_save-data.png" /></a> <br /><br />
                    <a asp-controller="Home" asp-action="AddRepository" asp-route-symbol="@Model.Current.symbol">Add To My Repository</a> <br /><br />
                    <a asp-controller="Home" asp-action="StockRecommendation">Stock Recommendation</a>
                </td>
            </tr>
        </tbody>
    </table>
    <canvas id="StockChart" style="background-color:black;"></canvas>
}
<script>
        getChart("@Model.Dates", "@Model.Prices", "@Model.Volumes", @Model.AvgPrice, @Model.AvgVolume);
        alertDbSave(@ViewBag.dbSuccessChart);
        alertRepSave(@ViewBag.dbSuccessRep);
</script>
<script>
        getStockChart("@Model.Open", "@Model.High", "@Model.Low", "@Model.Close", "@Model.Dates");
</script>